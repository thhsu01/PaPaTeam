    <script>
        const schedule = [
            { lat: 25.108410, lng: 121.729033, time: "09:00", loc: "八堵車站", dist: 0.00, ele: 24, pos: "起點", 
              desc: "行程起點。建議在此整理裝備，完成最後補給。", advice: "檢查交通卡餘額。" },
            { lat: 25.116045, lng: 121.730965, time: "09:36", loc: "登山口", dist: 0.90, ele: 32, pos: "出發", 
              desc: "由柏油路進入山徑，開始緩步爬升。", advice: "調整呼吸，準備上坡。" },
            { lat: 25.116081, lng: 121.732702, time: "09:44", loc: "三角洲嶺北峰", dist: 1.10, ele: 130, pos: "山頭", 
              desc: "短距離快速爬升，可在此小歇回頭望向八堵山谷。", advice: "注意路面樹根。" },
            { lat: 25.118770, lng: 121.734570, time: "10:00", loc: "獅球長壽公園", dist: 1.50, ele: 110, pos: "休閒", 
              desc: "稜線上的休憩核心，是居民常聚集的社交場域。", advice: "水份補充點。" },
            { lat: 25.119095, lng: 121.737462, time: "10:12", loc: "獅球嶺山 (H153m)", dist: 1.80, ele: 153, pos: "最高點", 
              desc: "抵達此行最高點。附近有古砲台遺跡，歷史感濃厚。", advice: "適合全隊大合照。" },
            { lat: 25.121063, lng: 121.734472, time: "10:28", loc: "獅球嶺觀景台", dist: 2.20, ele: 125, pos: "展望", 
              desc: "無敵港景。包含觀看展望時間。", advice: "必看：基隆港與國道交織奇景。" },
            { lat: 25.121406, lng: 121.733981, time: "10:34", loc: "獅球嶺北峰", dist: 2.35, ele: 116, pos: "稜線", 
              desc: "延續觀景視角，進入下行段前的最後高地。", advice: "開始準備下山。" },
            { lat: 25.125800, lng: 121.731855, time: "11:08", loc: "劉銘傳隧道", dist: 3.20, ele: 50, pos: "古蹟", 
              desc: "歷史精華區。包含隧道內部觀賞與解說時間。", advice: "隧道涼爽，適合調節體溫。" },
            { lat: 25.1315, lng: 121.7390, time: "12:28", loc: "基隆車站 (解散)", dist: 5.20, ele: 10, pos: "終點", 
              desc: "抵達基隆市區核心，結束豐富的地景縱走。", advice: "可前往廟口夜市享用午餐。" }
        ];

        let map, chart, markers = [];
        let currentWaypointIndex = 0;

        function initRealMap() {
            map = L.map('realMap', { preferCanvas: true, center: [25.119, 121.734], zoom: 14 });
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
            const walkingCoords = schedule.map(d => [d.lat, d.lng]);
            L.polyline(walkingCoords, { color: '#0ea5e9', weight: 4, opacity: 0.7, dashArray: '8, 8' }).addTo(map);
            schedule.forEach((d, i) => {
                const circle = L.circleMarker([d.lat, d.lng], {
                    radius: i === 0 || i === schedule.length - 1 || d.pos === "最高點" ? 8 : 6,
                    fillColor: i === 0 ? '#0ea5e9' : (d.pos === "最高點" ? '#ef4444' : '#1e293b'),
                    color: '#fff', weight: 2, opacity: 1, fillOpacity: 1
                }).addTo(map);
                circle.on('click', () => updateCard(i));
                markers.push(circle);
            });
        }

        function initChart() {
            const ctx = document.getElementById('elevationChart').getContext('2d');
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: schedule.map(d => d.loc),
                    datasets: [{ label: '海拔 (m)', data: schedule.map(d => d.ele), borderColor: '#0ea5e9', borderWidth: 3, pointRadius: 4, fill: true, backgroundColor: 'rgba(14, 165, 233, 0.05)', tension: 0.4 }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { y: { min: 0 } } }
            });
        }

        function updateCard(idx) {
            currentWaypointIndex = idx;
            const d = schedule[idx];
            document.getElementById('wp-title').innerText = d.loc;
            document.getElementById('wp-dist').innerText = d.dist.toFixed(2);
            document.getElementById('wp-ele').innerText = d.ele;
            document.getElementById('wp-desc').innerText = d.desc;
            document.getElementById('wp-advice').innerText = d.advice;
            markers.forEach((m, i) => m.setStyle({ radius: i === idx ? 12 : 6, fillOpacity: i === idx ? 1 : 0.6 }));
            map.panTo([d.lat, d.lng]);
        }

        function nextWaypoint() { updateCard((currentWaypointIndex + 1) % schedule.length); }
        function prevWaypoint() { updateCard((currentWaypointIndex - 1 + schedule.length) % schedule.length); }

        function renderTimeline() {
            const container = document.getElementById('timeline-container');
            schedule.forEach((item, i) => {
                const div = document.createElement('div');
                div.className = "relative flex items-start mb-12 group cursor-pointer pl-8";
                div.onclick = () => { updateCard(i); scrollToSection('map-section'); };
                let color = i === 0 || i === schedule.length - 1 ? "bg-sky-600" : (item.pos === "最高點" ? "bg-red-500" : "bg-slate-300");
                div.innerHTML = `
                    <div class="absolute left-0 w-12 flex justify-center z-10 pt-1"><div class="w-4 h-4 rounded-full ${color} border-2 border-white transition-transform group-hover:scale-125"></div></div>
                    <div class="w-full bg-white p-5 rounded-[1.5rem] border border-slate-100 card-hover transition-all">
                        <div class="flex justify-between items-center mb-1">
                            <span class="text-lg font-black text-slate-800">${item.time}</span>
                            <span class="text-[9px] font-black text-slate-400 border border-slate-200 px-2 py-0.5 rounded uppercase">${item.pos}</span>
                        </div>
                        <h4 class="font-bold text-slate-700 text-sm mb-2">${item.loc}</h4>
                        <p class="text-[11px] text-slate-500 leading-relaxed">${item.desc}</p>
                    </div>`;
                container.appendChild(div);
            });
        }

        function scrollToSection(id) { document.getElementById(id)?.scrollIntoView({ behavior: 'smooth' }); }
        window.onload = () => { initRealMap(); initChart(); renderTimeline(); updateCard(0); };
    </script>
</body>
</html>
